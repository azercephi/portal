{
  "manifest_version": 2,
  "name": "Portal",
  "version": "0",
  "description": "Uses history to generate new tab pages more compatible with workflow",
  "permissions": [
    "history", 
    "tabs",
    "topSites",
    "alarms",
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab" : "mainpage.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["circle.css"],
      "js": ["predict.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}